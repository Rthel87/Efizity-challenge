<!DOCTYPE html>
<html>
  <head>
    <title>EfizityChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |type, msg| %>
      <% if flash[:info] %>
        <div class="flash is-info">
          <%= msg %>
        </div>
      <% elsif flash[:warning] %>
        <div class="flash is-warning">
          <%= msg %>
        </div>
      <% else %>
        <div class="flash is-error">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
